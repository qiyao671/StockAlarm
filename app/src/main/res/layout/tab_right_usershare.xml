<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minHeight="40dp" android:gravity="center_vertical">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新"
            android:width="80dp"
            android:id="@+id/textView" android:gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涨幅"
            android:width="80dp"
            android:id="@+id/textView1" android:gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涨跌"
            android:width="80dp"
            android:id="@+id/textView2" android:gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开盘"
            android:width="80dp"
            android:id="@+id/textView4" android:gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨收"
            android:width="80dp"
            android:id="@+id/textView5" android:gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最高"
            android:width="80dp"
            android:id="@+id/textView6" android:gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低"
            android:width="80dp"
            android:id="@+id/textView7" android:gravity="center"/>
</LinearLayout>